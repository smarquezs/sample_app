<!-- new.html.erb -->

<% provide(:title, 'Sign in') %>

<%debug(@user) %>
<div class="row">
	<div class="span6 offset3 ">
	<h1>Sign in</h1>
		<%= simple_form_for :session, url: sessions_path do |f| %>
			<%= f.input :email %>
			<%= f.input :password %>
		  <%= f.button :submit, value: 'Sign in', class: 'btn btn-primary' %>
		<% end -%>
		<p>New user? <%= link_to "Sign up now!", signup_path %></p>
	</div>
</div>